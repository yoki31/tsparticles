{
  "name": "tsparticles-editor",
  "version": "2.0.0-beta.2",
  "description": "tsParticles Configuration Editor",
  "keywords": [
    "tsparticles",
    "particles.js",
    "particles",
    "editor",
    "dat.gui",
    "javascript",
    "wysiwyg"
  ],
  "author": "Matteo Bruni <ar3s@icloud.com>",
  "homepage": "https://particles.js.org/",
  "license": "MIT",
  "directories": {
    "dist": "dist"
  },
  "files": [
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "jsdelivr": "dist/tsparticles.editor.min.js",
  "unpkg": "dist/tsparticles.editor.min.js",
  "browser": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matteobruni/tsparticles.git",
    "directory": "core/editor"
  },
  "scripts": {
    "prettify:src": "prettier --write ./src",
    "prettify:readme": "prettier --write ./README.md",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "clear:dist": "rimraf -f ./dist",
    "build:ts:esm": "tsc -b tsconfig.module.json",
    "build:ts:cjs": "tsc",
    "build:ts": "yarn build:ts:browser && yarn build:ts:esm && yarn build:ts:cjs",
    "build:ts:check": "tsc --noEmit",
    "build:ts:browser": "tsc -b tsconfig.browser.json",
    "build": "yarn clear:dist && yarn prettify:src && yarn build:ts:check && yarn lint && yarn build:ts && webpack --mode production && yarn prettify:readme",
    "prepack": "yarn build"
  },
  "bugs": {
    "url": "https://github.com/matteobruni/tsparticles/issues"
  },
  "dependencies": {
    "object-gui": "^1.1.1",
    "tsparticles-engine": "^2.0.0-beta.1",
    "tsparticles-plugin-absorbers": "^2.0.0-beta.2",
    "tsparticles-plugin-emitters": "^2.0.0-beta.2",
    "tsparticles-plugin-infection": "^2.0.0-beta.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@types/webpack-env": "^1.16.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "babel-loader": "^8.2.2",
    "copyfiles": "^2.4.1",
    "downlevel-dts": "^0.7.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^5.2.4",
    "typescript": "^4.4.3",
    "webpack": "^5.53.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^5.1.4",
    "webpack-tsparticles-plugin": "^1.0.0-beta.0"
  }
}
